{% extends "layout.njk" %}

{% block content %}
    
    <div class="teacher table-container">
        <a href="/students/create">Novo Aluno</a>

        <table width="100%">
            <thead>
                <tr>
                    <th>Nome Completo</th>
                    <th>Email</th>
                    <th>Ano Escolar</th>
                    <th>Ação</th>                      
                </tr>
            </thead>
            <tbody>
            {%for student in students %}
                <tr>
                    <td>
                        <span style="background-image: url({{student.avatar_url}})"></span>
                    
                    {{student.name}}</td>
                    <td>{{student.email}}</td>
                    <td>{{student.select}}</td>
                    <td><a href="/students/{{student.id}}">Ver</a></td>
                </tr>
            {%endfor%}
            </tbody>
        
        </table>
    </div>
{% endblock content %}