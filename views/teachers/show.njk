{% extends "layout.njk" %}

{% block content %}
    
    <div class="teacher">
        <section 
        class="avatar" 
        style=" background: url({{teacher.avatar_url}}) no-repeat center center / cover ">
        </section>
        <section class="details">
            <h3>Detalhes</h3>
            <div class="item">
                <div>Professor</div>
                <div>{{teacher.name}}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{teacher.age}}</div>
            </div>

            <div class="item">
                <div>Grau de Escolaridade</div>                
                <div>{{teacher.select}}</div>                
            </div>

            <div class="item">
                <div>Tipo de Aula</div>
                <div>                   
                    <span>{{ "Presencial" if teacher.classe == "P" else "Distancia"}}</span>                   
                </div>
            </div>

            <div class="item">
                <div>Acompanhamento</div>
                <div>
                {%for acting in teacher.acting %}
                    <span>{{ acting }}</span>
                {%endfor%}
                
                </div>
            </div>

            <div class="item">
                <div>Desde</div>
                <div>{{teacher.created_at}}</div>
            </div>
            <a href="/teachers/{{teacher.id}}/edit" class="button">Editar</a>
        </section>
    </div>
{% endblock content %}